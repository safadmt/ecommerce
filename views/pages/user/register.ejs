<main>
  <section class="login_part mt-5 ">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>Already have an account</h2>
                        <p>Please login!</p>
                        <a href="/auth/login" class="btn_3">Login</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>New to our watches portal ?<br>
                            Please Sign up now</h3>
                        <form class="row contact_form" onsubmit="handleSubmit(event)">
                          <div id="errordiv"></div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" 
                                id="username" name="username" value=""
                                oninput="usernameChange(event)"
                                    placeholder="Username">
                                    <span class="txt-sm text-danger" id="username_span"></span>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="email" class="form-control"
                                 id="email" name="email" value=""
                                 oninput="emailChange(event)"
                                    placeholder="Email">
                                    <span class="txt-sm text-danger" id="email_span"></span>
                            </div>
                            <div class="col-md-12 form-group p_star">
                              <input type="tel" class="form-control" id="mobile" name="mobile" value=""
                                  placeholder="Mobile"
                                  oninput="mobileNumberChange(event)">
                                  <span class="txt-sm text-danger" id="mobile_span"></span>
                          </div> 
                          <div class="col-md-12 form-group p_star">
                            <input type="password" class="form-control" id="password" name="password" value=""
                                placeholder="Password" 
                                oninput="passwordChange(event)">
                                <span class="txt-sm text-danger" id="password_span"></span>
                        </div>
                            <div class="col-md-12 form-group">
                                <span id="messagesignup"></span>
                                <button type="submit" value="submit" class="btn_3">
                                    Sign up
                                </button>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/costom/javascript/register.js"></script>
